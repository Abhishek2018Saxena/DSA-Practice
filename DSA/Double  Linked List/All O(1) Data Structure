/*
============================================================
Problem: All O(1) Data Structure
Category: Doubly Linked List + Hash Map
Platform: LeetCode
Language: C++
Approach:
    - Doubly linked list stores counts in sorted order
    - Hash map maps key → node
    - Each node stores set of keys with same count
    - Head → minimum, Tail → maximum

Time Complexity:
    inc      -> O(1)
    dec      -> O(1)
    getMaxKey-> O(1)
    getMinKey-> O(1)

Space Complexity: O(N)
============================================================

Example:
AllOne obj;
obj.inc("hello");
obj.inc("hello");
obj.getMaxKey(); // "hello"
obj.getMinKey(); // "hello"
*/

#include <bits/stdc++.h>
using namespace std;

class AllOne {
private:
    struct Node {
        int count;
        unordered_set<string> keys;
        Node* prev;
        Node* next;

        Node(int c) : count(c), prev(nullptr), next(nullptr) {}
    };

    Node* head;
    Node* tail;
    unordered_map<string, Node*> mp;

    // Insert new node after given node
    Node* insertAfter(Node* node, int count) {
        Node* newNode = new Node(count);
        newNode->next = node->next;
        newNode->prev = node;
        node->next->prev = newNode;
        node->next = newNode;
        return newNode;
    }

    // Remove node if empty
    void removeNode(Node* node) {
        node->prev->next = node->next;
        node->next->prev = node->prev;
        delete node;
    }

public:
    AllOne() {
        head = new Node(0);   // dummy head
        tail = new Node(0);   // dummy tail
        head->next = tail;
        tail->prev = head;
    }

    void inc(string key) {
        if (mp.find(key) == mp.end()) {
            // Step 1: Insert new key with count = 1
            Node* node;
            if (head->next->count == 1) {
                node = head->next;
            } else {
                node = insertAfter(head, 1);
            }
            node->keys.insert(key);
            mp[key] = node;
        } 
        else {
            Node* cur = mp[key];
            int newCount = cur->count + 1;

            Node* nextNode;
            if (cur->next->count == newCount) {
                nextNode = cur->next;
            } else {
                nextNode = insertAfter(cur, newCount);
            }

            nextNode->keys.insert(key);
            mp[key] = nextNode;

            // Remove from old node
            cur->keys.erase(key);
            if (cur->keys.empty()) {
                removeNode(cur);
            }
        }
    }

    void dec(string key) {
        Node* cur = mp[key];
        int newCount = cur->count - 1;

        cur->keys.erase(key);

        if (newCount == 0) {
            mp.erase(key);
        } 
        else {
            Node* prevNode;
            if (cur->prev->count == newCount) {
                prevNode = cur->prev;
            } else {
                prevNode = insertAfter(cur->prev, newCount);
            }

            prevNode->keys.insert(key);
            mp[key] = prevNode;
        }

        if (cur->keys.empty()) {
            removeNode(cur);
        }
    }

    string getMaxKey() {
        if (tail->prev == head) return "";
        return *(tail->prev->keys.begin());
    }

    string getMinKey() {
        if (head->next == tail) return "";
        return *(head->next->keys.begin());
    }
};

/*
File Name Suggestion:
all-o1-data-structure.cpp
*/
